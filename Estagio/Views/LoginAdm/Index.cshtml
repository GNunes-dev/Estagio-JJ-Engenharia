@{
    ViewData["Title"] = "Login ADM";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@section js{
    <script src="~/view/LoginAdm/index.js?v=1"></script>
}

<section>
    <div class="container wow fadeInUp">
        <div class="section-header">
            <h3 class="section-title">Autenticação de ADM</h3>
        </div>
    </div>

    <div class="container wow fadeInUp mt-5">
        <div class="row justify-content-center">



            <div class="col-lg-5 col-md-8">
                <div class="form">

                    <div id="errormessage"></div>
                    <form>
                        <div class="form-group">
                            <input type="text" class="form-control" id="login" placeholder="Usuário" data-rule="minlen:4" data-msg="Digite um login válido." />
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="senha" placeholder="Senha" data-rule="minlen:3" data-msg="Digite uma senha válida." />
                            <div class="validation"></div>
                        </div>

                        <div class="text-center"><input type="button" value="Entrar" id="btnEntrar" onclick="index.btnEntrarOnClick()" /></div>

                        <div id="divMsg"></div>

                    </form>

                </div>
            </div>

        </div>

    </div>
</section><!-- #contact -->
