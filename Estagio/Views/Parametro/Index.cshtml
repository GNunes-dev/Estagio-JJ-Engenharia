@{
    ViewData["Title"] = "Parametro";
    Layout = "~/Views/Shared/_LayoutADM.cshtml";
}

@section js{
    <script src="~/view/Parametro/index.js?v=1"></script>
}

<div class="col-md-8">
    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title">Cadastro de Empresa</h4>
            <p class="card-category">Preencha o formulário para cadastrar a Empresa.</p>
        </div>
        <div class="card-body">
            <form>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="razao">Razao</label>
                        <input type="text" class="form-control" id="razao">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="nomefantasia">Nome Fantasia</label>
                        <input type="text" class="form-control" id="nomefantasia">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="ie">IE</label>
                        <input type="text" class="form-control" id="ie">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="cnpj">CNPJ</label>
                        <input type="text" class="form-control" id="cnpj">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="datainicio">Data Inicio</label>
                        <input type="text" class="form-control" id="datainicio">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="endereco">Endereco</label>
                        <input type="text" class="form-control" id="endereco" placeholder="exemplo: Rua:blalabla, 23">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="bairro">Bairro</label>
                        <input type="text" class="form-control" id="bairro">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="telefone">Telefone</label>
                        <input type="text" class="form-control" id="telefone">
                    </div>
                </div>

                <div class="form-row">

                    <div class="form-group col-md-4">
                        <label for="cep">CEP</label>
                        <input type="text" class="form-control" id="cep">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="uf">Estado</label>
                        <select class="form-control" id="uf" style="background-color: #202940" onchange="index.buscarCidades(this.value)">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="selCidade">Cidade</label>
                        <select class="form-control" style="background-color: #202940" id="selCidade">
                        </select>
                    </div>


                </div>

                <div id="divMsg"></div>
                <div class="text-center">
                    <input type="button" class="btn btn-primary" value="CADASTRAR" id="btnCadastrar" onclick="index.btnCadastrar()" />
                </div>

            </form>
        </div>
    </div>
</div>