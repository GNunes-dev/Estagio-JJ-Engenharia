@{
    ViewData["Title"] = "Cadastro de Serviço";
    Layout = "~/Views/Shared/_LayoutADM.cshtml";
}


@section js{
    <script src="~/view/Serviço/cadastro.js"></script>
}

<div class="col-md-8">
    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title">Cadastro de Serviço</h4>
            <p class="card-category">Preencha o formulário para cadastrar um Serviço.</p>
        </div>
        <div class="card-body">         
            <form>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="cpf">Nome</label>
                        <input type="text" class="form-control" id="nome">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="rg">Valor</label>
                        <input type="number" class="form-control" id="valor">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="setor">Setor</label>
                        <select class="form-control" id="setor" style="background-color: #202940">
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="bmd-label-floating"> Descrição</label>
                    <textarea class="form-control" rows="5" id="descriçao"></textarea>
                </div>
                <div id="divMsg"></div>
                <div class="text-center">
                    <input type="button" class="btn btn-primary" value="CADASTRAR" id="btnCadastrar" onclick="cadastro.btnCadastrar()" />
                </div>
            </form>
        </div>
    </div>
</div>